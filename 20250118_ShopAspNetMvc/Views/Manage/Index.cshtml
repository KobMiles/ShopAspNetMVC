@{
    ViewData["Title"] = "Manage Products";
}
@model List<Product>

<h1>@ViewData["Title"]</h1>
<a asp-controller="Manage" asp-action="Create" class="btn btn-primary">Create Product</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Image</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Discount</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr class="align-middle">
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>
                <a href="@item.ImageUrl">
                    <img class="manage product-image" src="@item.ImageUrl" class="img-fluid" alt="@item.Name">
                </a>
            </td>
            <td>@item.Category?.Name</td>
            <td>@item.Price$</td>
            <td>@item.Quantity</td>
            <td>@item.Discount%</td>
            <td>
                <button class="btn btn-danger delete-product" data-id="@item.Id">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="confirm-delete-container">

</div>